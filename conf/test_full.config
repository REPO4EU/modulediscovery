/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running full-size tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a full size pipeline test.

    Use as follows:
        nextflow run REPO4EU/modulediscovery -profile test_full,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Full test profile'
    config_profile_description = 'Full test dataset to check pipeline function'

    // Input data for full size test
    seeds                   = "https://raw.githubusercontent.com/JohannesKersting/test-datasets/diseasemodulediscovery/seedfiles/8505C.txt,https://raw.githubusercontent.com/JohannesKersting/test-datasets/diseasemodulediscovery/seedfiles/B-CPAP.txt,https://raw.githubusercontent.com/JohannesKersting/test-datasets/diseasemodulediscovery/seedfiles/Cal62.txt,https://raw.githubusercontent.com/JohannesKersting/test-datasets/diseasemodulediscovery/seedfiles/FTC-133.txt,https://raw.githubusercontent.com/JohannesKersting/test-datasets/diseasemodulediscovery/seedfiles/TPC-1.txt"
    network                 = "https://raw.githubusercontent.com/JohannesKersting/test-datasets/diseasemodulediscovery/background_ppi/ppi_only_reviewed_proteins.csv"
    id_space                = "uniprot"
    run_seed_permutation    = true
    run_network_permutation = true
}
