/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run REPO4EU/modulediscovery -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

process {
    resourceLimits = [
        cpus: 2,
        memory: '6.GB',
        time: '1.h'
    ]
    memory = '1.GB'
    withName: DIGEST {
        memory = '6.GB'
    }
}

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function with ensembl id space'

    // Input data
    seeds                   = "https://raw.githubusercontent.com/JohannesKersting/test-datasets/diseasemodulediscovery/small/ensembl_seeds_2.csv"
    network                 = "string_physical_min900"
    id_space                = "ensembl"
    validate_online         = true
    run_seed_permutation    = true
    run_network_permutation = true
    n_network_permutations  = 3
}
